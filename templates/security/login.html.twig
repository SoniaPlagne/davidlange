{% extends 'base.html.twig' %} {% block title %}Accès Privé David Lange{% endblock %} {% block body %} {% include
'menu/_header.html.twig' %}
<form method="post">
  {% if error %}
  <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %} {% if app.user %}

  <div class="mb-3">You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a></div>
  {% endif %}

  <h1 class="titre">Bienvenue dans l'accès privé de DavidLange</h1>
  <div class="container">
    <h2>Veuillez vous connecter</h2>
    <div class="connexion">
      <div class="utilisateur">
        <label for="inputUsername">Nom d'utilisateur </label>
        <input
          type="text"
          value="{{ last_username }}"
          name="username"
          id="inputUsername"
          class="form-control"
          autocomplete="username"
          required
          autofocus
        />
      </div>

      <div class="password">
        <label for="inputPassword">Mot de passe </label>
        <input
          type="password"
          name="password"
          id="inputPassword"
          class="form-control"
          autocomplete="current-password"
          required
        />
        <a href="{{ path('mot-de-passe-oublie') }}" class="forgot-password">Mot de passe oublié</a>
      </div>

      {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
      See https://symfony.com/doc/current/security/remember_me.html

      <div class="checkbox mb-3">
        <label> <input type="checkbox" name="_remember_me" /> Remember me </label>
      </div>
      #}

      <button class="btn btn-lg btn-primary connect" type="submit">Connexion</button>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
  </div>
</form>
<div class="create-account">
  Pas encore d'accès client ?
  <form action="/register" method="get" target="_blank">
    <button type="submit" class="btn btn-lg btn-primary connect">Configurer mon compte</button>
  </form>
</div>

