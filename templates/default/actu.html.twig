{% extends 'base.html.twig' %}

{% block title %}
    Actualités
{% endblock %}

{% block body %}
    {% include 'menu/_menu.html.twig' %}   
    
    <h1>Retrouvez l'ensemble de nos actualités ci-dessous
        {% if brouillon %}
            brouillon
        {% endif %}
    </h1>

    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('vue_article', { 'id':article.id }) }}">{{ article.titre }}</a> {{ article.dateCreation|date('d/m/Y')}}
            </li>
        {% endfor %}
    </ul>


{% endblock %}
